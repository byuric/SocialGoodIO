extends ../layout

block content
    .page-header
        h3 New Project

    form.form-horizontal(id='new-project', method='POST', action='/project')
        .form-group
            label(class='col-sm-2 control-label', for='name') Name
            .col-sm-8
                input.form-control(type='name', name='name', id='name', autofocus=true)
        .form-group
            label(class='col-sm-2 control-label', for='description') Description
            .col-sm-8
                input.form-control(type='text', name='description', id='description', rows='3')
        .form-group
            label(class='col-sm-2 control-label', for='location') Location
            .col-sm-8
                textarea.form-control(type='name', name='location', id='location')
        .form-group
            label(class='col-sm-2 control-label', for='startDate') Start date
            .col-sm-2
                input.form-control(type='date', name='startDate', id='startDate')
        .form-group
            label(class='col-sm-2 control-label', for='endDate') End date
            .col-sm-2
                input.form-control(type='date', name='endDate', id='endDate')
        //.form-group
        //    label(class='col-sm-2 control-label', for='status') Status
        //    .col-sm-8
        //        select.form-control(name='status', id='status')
        //            option(value='New') New
        //            option(value='In Progress') In Progress
        //            option(value='Completed') Completed
        .form-group
            label(class='col-sm-2 control-label', for='totalHoursPlanned') Total hours planned
            .col-sm-8
                input.form-control(type='text', name='totalHoursPlanned', id='totalHoursPlanned')
        .form-group
            label(class='col-sm-2 control-label', for='totalEstimatedBudget') Total estimated budget
            .col-sm-8
                input.form-control(type='text', name='totalEstimatedBudget', id='totalEstimatedBudget')
        .form-group
            input.form-control(type='hidden', name='_csrf', value=token)
        .form-group
            .col-sm-offset-2.col-sm-8
                button.btn.btn-success(type='submit')
                    i.fa.fa-check
