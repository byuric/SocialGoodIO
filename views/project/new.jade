extends ../layout

block content
    .page-header
        h3 New Project

    form.form-horizontal(id='new-project', method='POST', action='/project')
        .form-group
            label(class='col-sm-2 control-label', for='name') Name
            .col-sm-8
                input.form-control(type='name', name='name', id='name', autofocus=true)
        .form-group
            label(class='col-sm-2 control-label', for='description') Description
            .col-sm-8
                input.form-control(type='text', name='description', id='description')
        .form-group
            label(class='col-sm-2 control-label', for='location') Location
            .col-sm-8
                textarea.form-control(type='text', name='location', id='location', rows='7')
        .form-group
            label(class='col-sm-2 control-label', for='startDate') Start date
            .col-sm-2
                input.form-control(type='text', name='startDate', id='startDate')
        .form-group
            label(class='col-sm-2 control-label', for='endDate') End date
            .col-sm-2
                input.form-control(type='text', name='endDate', id='endDate')
        .form-group
            label(class='col-sm-2 control-label', for='status') Status
            .col-sm-8
                select.form-control(name='status', id='status')
                    option(value='Planning') Planning
                    option(value='In Progress') In Progress
                    option(value='Finished') Finished
        .form-group
            label(class='col-sm-2 control-label', for='totalHoursNeeded') Total hours need
            .col-sm-8
                input.form-control(type='text', name='totalHoursNeeded', id='totalHoursNeeded')
        .form-group
            label(class='col-sm-2 control-label', for='totalDollarsNeeded') Total dollars need
            .col-sm-8
                input.form-control(type='text', name='totalDollarsNeeded', id='totalDollarsNeeded')
        .form-group
            input.form-control(type='hidden', name='_csrf', value=token)
        .form-group
            .col-sm-offset-2.col-sm-8
                button.btn.btn-default(type='submit')
                    i.fa.fa-check
                        | Create