extends ../layout

block content
  .page-header
    //a(href='#', class='btn btn-primary pull-right') Edit

    div.profile
        img(src='#{user.picture}', height='50px')
        h4.name
            span #{user.name}
        div.location='Location'
            p #{user.country}
        hr

    h1 Projects
    for p in projects
      div.project-card
          h3.title
              a(href='/project/'+p.project.id)
                  span=p.project.name
          div.description
              p=p.project.description
          div.members
              if p.project.members.length>0 && p.project.members[0].user != null
                  each val in [0, 1, 2, 3, 4, 5]
                      if(p.project.members[val])
                          img(src="#{p.project.members[val].user.picture}", class='profile', width='30', height='30')
                  if p.project.members.length>6
                      |...
          div.summary
              div.membercount
                  if p.project.members.length>0
                      div=p.project.members.length + ((p.project.members.length>1) ? ' Members':' Lonely Member')
                  else
                      div='No followers yet.'
              div.stats
                  div
                      //- (project.members.length*8).toFixed(2)+'%'
                  div
                      //- 'Funded'
              div.value
                  div='$'+(p.project.totalEstimatedBudget?p.project.totalEstimatedBudget:0).toFixed(2)
                  div='Total Value'