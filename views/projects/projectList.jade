extends /layout

block content
  h1 Active Projects
  for project in projects
    div.project-card
      h3.title
        a(href='/project/'+project.id)
          span=project.name
      div.description
          p=project.description
      div.members
      if project.members.length>0 && project.members[0].user != null
        for member in project.members
          img(src="#{member.user.picture}", class='profile', width='30', height='30')
      div.summary
        div.membercount
          div=project.members.length
          div=(project.members.length>1) ? 'Members':'Lonely Member'
        div.stats
          div 
            //- (project.members.length*8).toFixed(2)+'%'
          div 
            //- 'Funded'
        div.value
          div='$'+(project.totalEstimatedBudget?project.totalEstimatedBudget:0).toFixed(2)
          div='Total Value'